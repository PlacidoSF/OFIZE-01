<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="ofize-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.ufersa.OFIZE.model.entitie.Clientes</class>
        <class>com.ufersa.OFIZE.model.entitie.Automoveis</class>
        <class>com.ufersa.OFIZE.model.entitie.Servico</class>
        <class>com.ufersa.OFIZE.model.entitie.Pecas</class>
        <class>com.ufersa.OFIZE.model.entitie.Orcamento</class>
        <class>com.ufersa.OFIZE.model.entitie.OrcamentoPeca</class>
        <class>com.ufersa.OFIZE.model.entitie.OrcamentoServico</class>
        <class>com.ufersa.OFIZE.model.entitie.Funcionarios</class>
        <class>com.ufersa.OFIZE.model.entitie.Gerentes</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/ofize_db?createDatabaseIfNotExist=true&amp;useSSL=false"/>

            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/> <property name="hibernate.generate_statistics" value="true"/>
            <property name="hibernate.id.new_generator_mappings" value="true"/>
        </properties>
    </persistence-unit>
</persistence>